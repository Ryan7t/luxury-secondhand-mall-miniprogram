<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息头部 -->
  <view class="user-info-section">
    <view class="user-info">
      <view class="avatar-container">
        <image class="avatar" src="/static/images/icon_user_avatar.png" mode="aspectFill"></image>
      </view>
      <view class="user-detail">
        <view class="nickname">奢品荟用户</view>
        <view class="user-level">
          <text class="level-tag">VIP会员</text>
          <text class="level-expire">有效期至：2023-12-31</text>
        </view>
      </view>
    </view>
    <view class="user-data">
      <view class="data-item">
        <text class="data-num">0</text>
        <text class="data-label">收藏</text>
      </view>
      <view class="data-item">
        <text class="data-num">0</text>
        <text class="data-label">关注</text>
      </view>
      <view class="data-item">
        <text class="data-num">0</text>
        <text class="data-label">足迹</text>
      </view>
    </view>
  </view>

  <!-- 订单列表 -->
  <view class="order-list-section card-section">
    <view class="order-tabs">
      <view class="tab-item {{currentTab == 0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">待付款</view>
      <view class="tab-item {{currentTab == 1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">待发货</view>
      <view class="tab-item {{currentTab == 2 ? 'active' : ''}}" bindtap="switchTab" data-index="2">待收货</view>
      <view class="tab-item {{currentTab == 3 ? 'active' : ''}}" bindtap="switchTab" data-index="3">待评价</view>
      <view class="tab-item {{currentTab == 4 ? 'active' : ''}}" bindtap="switchTab" data-index="4">已完成</view>
    </view>
    
    <view class="order-list" wx:if="{{currentTab == 0}}">
      <view class="order-item">
        <view class="order-header">
          <text class="order-number">订单号: 2023112500001</text>
          <text class="order-status">待付款</text>
        </view>
        <view class="order-product">
          <image class="product-image" src="/static/images/product_chanel_classic_flap.jpg" mode="aspectFill"></image>
          <view class="product-info">
            <view class="product-name">香奈儿Classic Flap 经典翻盖包</view>
            <view class="product-spec">黑色 | 小羊皮</view>
            <view class="product-price-count">
              <text class="product-price">¥15,800</text>
              <text class="product-count">x1</text>
            </view>
          </view>
        </view>
        <view class="order-footer">
          <view class="order-total">
            <text>共1件商品 合计：</text>
            <text class="total-price">¥15,800</text>
          </view>
          <view class="order-actions">
            <button class="btn-cancel">取消订单</button>
            <button class="btn-pay">立即付款</button>
          </view>
        </view>
      </view>

      <view class="order-item">
        <view class="order-header">
          <text class="order-number">订单号: 2023112500002</text>
          <text class="order-status">待付款</text>
        </view>
        <view class="order-product">
          <image class="product-image" src="/static/images/product_lv_neverfull.jpg" mode="aspectFill"></image>
          <view class="product-info">
            <view class="product-name">LV Neverfull 手提包</view>
            <view class="product-spec">棕色 | 帆布</view>
            <view class="product-price-count">
              <text class="product-price">¥8,600</text>
              <text class="product-count">x1</text>
            </view>
          </view>
        </view>
        <view class="order-footer">
          <view class="order-total">
            <text>共1件商品 合计：</text>
            <text class="total-price">¥8,600</text>
          </view>
          <view class="order-actions">
            <button class="btn-cancel">取消订单</button>
            <button class="btn-pay">立即付款</button>
          </view>
        </view>
      </view>
    </view>
    
    <view class="order-list" wx:if="{{currentTab == 1}}">
      <view class="empty-tip">暂无待发货订单</view>
    </view>
    
    <view class="order-list" wx:if="{{currentTab == 2}}">
      <view class="empty-tip">暂无待收货订单</view>
    </view>
    
    <view class="order-list" wx:if="{{currentTab == 3}}">
      <view class="empty-tip">暂无待评价订单</view>
    </view>
    
    <view class="order-list" wx:if="{{currentTab == 4}}">
      <view class="empty-tip">暂无已完成订单</view>
    </view>
  </view>
</view>