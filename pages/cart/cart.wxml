<!--pages/order/order.wxml-->
<view class="container">
  <!-- 购物车列表 -->
  <view class="cart-list" wx:if="{{true}}">
    <view class="cart-item">
      <view class="checkbox-wrapper">
        <checkbox checked="{{true}}"></checkbox>
      </view>
      <view class="product-image">
        <image src="/static/images/product_chanel_classic_flap.jpg" mode="aspectFill"></image>
      </view>
      <view class="item-info">
        <view class="item-name">香奈儿Classic Flap 经典翻盖包</view>
        <view class="item-spec">黑色 | 小羊皮</view>
        <view class="item-price-count">
          <text class="item-price">¥15,800</text>
          <view class="count-control">
            <text class="btn minus">-</text>
            <text class="count">1</text>
            <text class="btn plus">+</text>
          </view>
        </view>
      </view>
    </view>
    
    <view class="cart-item">
      <view class="checkbox-wrapper">
        <checkbox checked="{{true}}"></checkbox>
      </view>
      <view class="product-image">
        <image src="/static/images/product_lv_neverfull.jpg" mode="aspectFill"></image>
      </view>
      <view class="item-info">
        <view class="item-name">LV Neverfull 手提包</view>
        <view class="item-spec">棕色 | 帆布</view>
        <view class="item-price-count">
          <text class="item-price">¥8,600</text>
          <view class="count-control">
            <text class="btn minus">-</text>
            <text class="count">1</text>
            <text class="btn plus">+</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 空购物车 -->
  <view class="empty-cart" wx:else>
    <image class="empty-cart-icon" src="/static/images/icon_empty_cart.png"></image>
    <text>购物车空空如也~</text>
    <button class="go-shopping">去逛逛</button>
  </view>

  <!-- 底部结算栏 -->
  <view class="cart-footer">
    <view class="select-all">
      <checkbox checked="{{true}}"></checkbox>
      <text>全选</text>
    </view>
    <view class="total-info">
      <view class="total-price-label">合计: <text class="total-price">¥24,400</text></view>
      <view class="total-desc">已包含运费</view>
    </view>
    <view class="checkout-btn">结算(2)</view>
  </view>
</view>