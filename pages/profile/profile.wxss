/* pages/profile/profile.wxss */
page {
  background-color: #f7f7f7;
}

.container {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 20rpx 30rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  border: 2rpx solid #f0f0f0;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level {
  display: flex;
  align-items: center;
}

.level-tag {
  font-size: 22rpx;
  color: #a6704b;
  background-color: #f8f3f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
}

.level-expire {
  font-size: 24rpx;
  color: #999;
}

.user-data {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 30rpx;
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.data-num {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.data-label {
  font-size: 24rpx;
  color: #999;
}

/* 卡片公共样式 */
.card-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 6rpx;
}

/* 订单类型 */
.order-types {
  display: flex;
  justify-content: space-between;
}

.order-type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrap {
  position: relative;
  margin-bottom: 10rpx;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f8f3f0;
  color: #a6704b;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-label {
  font-size: 24rpx;
  color: #666;
}



/* 订单列表样式 */
.order-list-section {
  margin-bottom: 20rpx;
}

/* 订单标签切换栏 */
.order-tabs {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
}

.tab-item {
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  text-align: center;
}

.tab-item.active {
  color: #a6704b;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #a6704b;
  border-radius: 2rpx;
}

.order-list {
  padding: 0;
}

.order-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  color: #a6704b;
  font-weight: 500;
}

.order-product {
  display: flex;
  margin-bottom: 20rpx;
}

.order-product .product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.order-product .product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-product .product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.order-product .product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.order-product .product-price-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-product .product-price {
  font-size: 28rpx;
  color: #a6704b;
  font-weight: 500;
}

.order-product .product-count {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-total {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.total-price {
  font-size: 28rpx;
  color: #a6704b;
  font-weight: 500;
  margin-left: 10rpx;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
}

.order-actions button {
  min-width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  padding: 0 20rpx;
}

.btn-cancel {
  color: #666;
  background-color: #f5f5f5;
  border: 1rpx solid #ddd;
}

.btn-pay {
  color: #fff;
  background-color: #a6704b;
}

.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}