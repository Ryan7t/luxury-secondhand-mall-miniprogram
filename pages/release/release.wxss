/* pages/release/release.wxss */
page {
  background-color: #f7f7f7;
  padding-bottom: 140rpx;
}

.container {
  width: 100%;
  box-sizing: border-box;
}

/* 表单头部 */
.form-header,
.upload-section,
.form-section {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.form-header {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.form-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 上传图片区域 */
.upload-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 5rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.upload-images {
  display: flex;
  flex-wrap: wrap;
}

.upload-item {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx 20rpx 0;
  position: relative;
}

.upload-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.upload-add {
  width: 100%;
  height: 100%;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 60rpx;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.item-content {
  display: flex;
  align-items: center;
}

.item-content input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.placeholder {
  color: #ccc;
}

.arrow {
  color: #ccc;
  margin-left: 10rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.picker-placeholder {
  color: #ccc;
  font-size: 28rpx;
}

.price-input {
  display: flex;
  align-items: center;
}

.price-symbol {
  font-size: 30rpx;
  color: #333;
  margin-right: 10rpx;
}

.textarea-content {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
}

textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
}

/* 验证信息 */
.verification-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.verification-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #a6704b;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}