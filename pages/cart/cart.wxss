/* pages/order/order.wxss */

/* cart.wxss */
page {
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
  text-align: center;
  font-size: 28rpx;
}

.container {
  width: 100%;
  box-sizing: border-box;
}

/* 购物车列表样式 */
.cart-list {
  padding-bottom: 30rpx;
}

.cart-item {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: #fff;
  margin: 20rpx 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.checkbox-wrapper {
  display: block;
  align-items: center;
  margin-right: 20rpx;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.item-price-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #a6704b;
  font-weight: 500;
}

.count-control {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
}

.btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.minus {
  border-right: 1rpx solid #eee;
  color: #999;
}

.plus {
  border-left: 1rpx solid #eee;
  color: #333;
}

.count {
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 空购物车样式 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.empty-cart-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-cart text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #a6704b;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 底部结算栏 */
.cart-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  justify-content: center;
  align-items: center;
}

.select-all {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.select-all text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
}

.total-price-label {
  font-size: 28rpx;
}

.total-price {
  font-size: 32rpx;
  color: #a6704b;
  font-weight: 500;
}

.total-desc {
  font-size: 22rpx;
  color: #999;
}

.checkout-btn {
  width: 200rpx;
  height: 70rpx;
  background-color: #a6704b;
  color: #fff;
  font-size: 28rpx;
  border-radius: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}